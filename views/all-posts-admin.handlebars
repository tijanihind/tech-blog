<section>
  <h2>Your Posts</h2>
  {{#if posts.length}}
    {{#each posts as |post|}}
      <div class="card">
        <div class="card-header">
          <h2><a href="/dashboard/edit/{{id}}">{{title}}</a></h2>
          <p>Posted by {{user.username}} on {{created_at}}</p>
        </div>
        <p class="card-body">{{body}}</p>
      </div>
    {{/each}}
  {{else}}
    <p>No posts! Add some.</p>
  {{/if}}
</section>

<button type="submit" class="btn"><a href="/dashboard/new">+ New Post</a></button>

<script src="/js/new.js"></script>